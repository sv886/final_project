<%= render "layouts/header" %>

<div class="container">
    <div class="member_form">
      <h1>Edit Member</h1>
      <hr>
      <%= simple_form_for @member do |f| %>
        <%= f.association :group, collection: @current_user.groups, :required =>false, :label => 'Class Time', label_method: :time_coach_full_name, value_method: :id, include_blank: true, input_html: { class: 'chosen-select' } %>
        <%= f.input :member_first_name, :required =>false, :label => 'First Name', :placeholder => 'Member First Name'  %>
        <%= f.input :member_last_name, :required =>false, :label => 'Last Name', :placeholder => 'Member Last Name'  %>
        <%= f.input :age, :required =>false, :label => '', :placeholder => 'Age'  %>
        <%= f.input :height_inches, :required =>false, :label => 'Height in Inches', :placeholder => 'If 5\'6" input 66'  %>
        <%= f.input :gender, collection: ['Male','Female'], :required =>false %>
        <%= f.input :status, collection: ['Active','Inactive'], :required =>false, :label => 'Membership Status' %>
        <%= f.input :notes, as: :text, :required =>false, :label => 'Notes', :placeholder => 'Health concerns (injury history etc.)'  %>
        <%= f.submit "Update Member", class: "btn btn-lg btn-primary" %>
      <% end %>
    </div>
</div>
