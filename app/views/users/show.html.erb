<div class="container">

  <div class="user_show">
    <div class="gym_name">
      <h1><%= link_to @current_user.gym_name, edit_user_path %></h1>
    </div>
    <hr>
    <div class="classes">
      <% @user.groups.order("groups.coach_first_name ASC").each do |group| %>
        <div class="tweet">
          <h4><%= link_to group.class_time, group_path(id: group.id) %> <%= group.coach_first_name %> <%= group.coach_last_name %></h4>
          <hr>
        </div>
      <% end %>
    </div>
    <div class="buttons">
      <%= link_to "Add Class", new_group_path, class: "btn btn-success" %>
      <%= link_to "Logout", logout_path, class: "btn btn-danger" %>
    </div>
  </div>


</div>
