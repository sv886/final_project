<%= render "layouts/header" %>

<div class="container">
    <div class="measure_show">
      <div class="measure_header">
        <div class="measurement_image_show">
            <%= image_tag attachment_url(@measurement, :photo, :fill, 300, 300, format: "jpg")%>
        </div>
        <div class="measurement_header_text">
          <h1><%= link_to "#{@measurement.member.member_first_name}'s", member_path(id: @measurement.member.id) %> Measurements:</h1>
          <h1><%= @measurement.created_at.strftime("%m.%d.%Y") %></h1>
        </div>
      </div>
        <hr>
        <div class="measurements_show">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>Measurement</th>
                <th>Result</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Weight</td>
                <td><%= @measurement.weight %> lbs</td>
              </tr>
              <tr>
                <td>Bicep</td>
                <td><%= @measurement.bicep_circ %> in.</td>
              </tr>
              <tr>
                <td>Forearm</td>
                <td><%= @measurement.forearm_circ %> in.</td>
              </tr>
              <tr>
                <td>Chest</td>
                <td><%= @measurement.chest_circ %> in.</td>
              </tr>
              <tr>
                <td>Waist</td>
                <td><%= @measurement.waist_circ %> in.</td>
              </tr>
              <tr>
                <td>Abdomen</td>
                <td><%= @measurement.abdomen_circ %> in.</td>
              </tr>
              <tr>
                <td>Hips</td>
                <td><%= @measurement.hips_circ %> in.</td>
              </tr>
              <tr>
                <td>Thigh</td>
                <td><%= @measurement.thigh_circ %> in.</td>
              </tr>
              <tr>
                <td>Calf</td>
                <td><%= @measurement.calf_circ %> in.</td>
              </tr>
              <tr>
                <td>BMI</td>
                <td><%= @measurement.bmi %></td>
              </tr>
              <tr>
                <td>Body Fat</td>
                <td><%= @measurement.body_fat_percentage %>%</td>
              </tr>
            </tbody>
          </table>
        </div>
        <hr>
        <div class="buttons">
         <%= link_to "Edit Measurements", edit_measurement_path(id: @measurement.id), class: "btn btn-warning" %>
         <%= link_to "Delete Measurement", measurement_path(id: @measurement.id), method: :delete, data: {confirm: "Delete #{@measurement.created_at.strftime("%m.%d.%Y")} Measurement?"}, class:"btn btn-danger" %>
        </div>
    </div>
</div>
