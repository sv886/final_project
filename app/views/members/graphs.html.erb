<%= render "layouts/header" %>

<div class="container">

  <div class="member_graphs">
    <h1><%= @current_user.gym_name %></h1>
    <h1><%= link_to "#{@member.group.coach_full_name}'s Class", group_path(id: @group.id), class: "btn btn-success" %></h1>
    <hr>
    <h4> <%= link_to "#{@member.member_first_name}'s", member_path %> Graphs</h4>

    <% if @measurements.length > 0 %>
      <%= line_chart @measurements.pluck(:created_at, :weight) %>
    <% else %>
      <h4>No measurements logged for <%= @member.member_first_name %></h4>
    <% end %>
  </div>
</div>
