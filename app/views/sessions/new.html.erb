
<div class="container">

  <%= form_tag do %>

    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email, "", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, "", class: "form-control" %>
    </div>

    <div class="form-group">
       <%= submit_tag "Sign in", class: "btn btn-lg btn-success" %>
       <%= link_to "Sign up", register_user_path, class: "btn btn-lg btn-default" %>
    </div>

  <% end %>

</div>
